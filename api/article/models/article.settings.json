{
  "connection": "default",
  "collectionName": "articles",
  "info": {
    "name": "article"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "user": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "body": {
      "type": "richtext",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "brief": {
      "type": "string",
      "required": true
    },
    "tags": {
      "collection": "tag"
    },
    "gallery": {
      "type": "dynamiczone",
      "components": [
        "pack.pack"
      ]
    },
    "briefBackground": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    },
    "isPublished": {
      "type": "boolean",
      "default": false
    }
  }
}
